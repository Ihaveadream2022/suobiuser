{
    "compilerOptions": {
        "target": "es2016",
        "module": "commonjs",
        "rootDir": "./src/js",
        "outDir": "./dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "noEmitOnError": true,
        "allowJs": true,
        "typeRoots": ["./node_modules/@types", "./src/types"]
    },
    "exclude": ["node_modules", "dist", "public"],
    "include": ["./src/js/*.ts"]
}
